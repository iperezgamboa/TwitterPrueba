<!DOCTYPE html>
<html>
  <head>
    <title>Hito1twitter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <%= link_to image_tag("",width:"150", height:"30"), root_path, class: "navbar-brand",id:"boton-home" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="glyphicon glyphicon-menu-hamburger"></span> </button>


        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class=" navbar-nav">
                <li class="menu-active">
                    <a id="boton-home" class="nav-link" href="/">Home</a></li>
                <% if user_signed_in? %>
                <li class="nav-item"><%= link_to "Ver mis Asistencias", root_path,class:"nav-link"%></li>
                <% end %>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="">
                    <ul class="">
                    </ul>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <% if user_signed_in? %>
                <li class="nav-item"><%= link_to "Salir", destroy_user_session_path, method: :delete,class:"nav-link" %></li>
                <% else %>
                <li class="nav-item"><%= link_to "Ingresar Usuario", new_user_session_path,class:"nav-link"  %></li>
                <% end %>
            </ul>
        </div>
        <!--/.nav-collapse -->

    </nav>
  </head>
   
  <body>
       <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
